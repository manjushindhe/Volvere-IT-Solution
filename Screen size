import tkinter as tk

def get_screen_size():
    root = tk.Tk()
    width_px = root.winfo_screenwidth()
    height_px = root.winfo_screenheight()
    root.destroy()
    return width_px, height_px

# Run the function and display screen size
screen_width, screen_height = get_screen_size()
print("Screen Size:", f"{screen_width}x{screen_height} pixels")


Screen Size: 1366x768 pixels
